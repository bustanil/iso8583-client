<GridPane alignment="CENTER" hgap="10.0" prefHeight="672.0" prefWidth="735.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.skyworx.iso8583.ui.MainUI">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <!-- Column 1 -->
   <Label style="-fx-font: NORMAL 20 Tahoma;" text="ISO Message" GridPane.rowIndex="0">
   </Label>
   <VBox GridPane.rowIndex="1" GridPane.rowSpan="2">
      <children>
         <Label text="Mux" />
         <HBox>
            <children>
               <ComboBox fx:id="muxList" maxWidth="1.7976931348623157E308" prefWidth="150.0" HBox.hgrow="ALWAYS" />
               <Button mnemonicParsing="false" onAction="#reloadMuxList" text="Reload" />
            </children>
         </HBox>
         <ListView fx:id="messageList">
   </ListView>
         <HBox>
            <children>
               <TextField fx:id="newMessage" promptText="Name" />
               <TextField promptText="MTI" fx:id="newMti" />
               <Button mnemonicParsing="false" onAction="#addNewMessage" text="Add" />
            </children>
         </HBox>
      </children>
   </VBox>

   <!-- Column 2 -->
   <Label style="-fx-font: NORMAL 20 Tahoma;" text="Message Detail" GridPane.columnIndex="1" GridPane.rowIndex="0">
   </Label>
   <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="selectedMessageContainer">
   </VBox>
   <ButtonBar GridPane.columnIndex="1" GridPane.rowIndex="2">
      <buttons>
         <Button onAction="#removeMessage" text="Remove Message" />
         <Button onAction="#saveMessage" text="Save Message" />
         <Button mnemonicParsing="false" onAction="#kirimPesan" text="Kirim" />
      </buttons>
   </ButtonBar>

   <VBox GridPane.columnSpan="2147483647" GridPane.rowIndex="3">
      <Label text="Console" />
      <TextArea fx:id="consoleArea" />
   </VBox>
   <columnConstraints>
      <ColumnConstraints hgrow="NEVER" />
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
